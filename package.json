{
  "name": "B2PC",
  "version": "3.0.0-beta.1",
  "description": "Batch Retro Games Converter by RetroGameSets.fr",
  "main": "main.js",
  "author": "RetroGameSets.fr",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder",
    "build:css": "npx tailwindcss -i ./ressources/tailwind.css -o ./ressources/style.css --minify",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@electron-addons/electron-forge-maker-nsis": "^7.0.2",
    "@electron/remote": "^2.0.8",
    "electron-squirrel-startup": "^1.0.1",
    "node-7z": "^3.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "autoprefixer": "^10.4.20",
    "electron": "^22.3.27",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "fr.retrogamesets.B2PC",
    "productName": "B2PC",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "ressources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
